{
    "name": "yii-ui",
    "version": "0.0.3",
    "description": "yii-ui - 为 Vue3 提供的组件库",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js"
        },
        "./components/*": {
            "import": "./dist/components/*/index.js"
        },
        "./styles/*": "./dist/styles/*"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "scripts": {
        "ra": "bun run ./release.js --major",
        "rb": "bun run ./release.js --minor",
        "rc": "bun run ./release.js --patch",
        "build": "vite build",
        "dev": "vite",
        "test": "vitest run",
        "test:watch": "vitest",
        "e2e": "playwright test",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "keywords": [
        "bun",
        "ui",
        "framework",
        "javascript"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "dist/",
        "LICENSE",
        "package.json",
        "README.md"
    ],
    "peerDependencies": {
        "vue": ">=3.3.0"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.0",
        "@vue/test-utils": "^2.4.6",
        "playwright": "^1.46.0",
        "vite": "^5.0.0",
        "vitepress": "^1.3.0",
        "vitest": "^2.0.0",
        "vue": "^3.4.0"
    }
}
