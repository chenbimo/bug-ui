{
    "name": "buig",
    "version": "0.0.8",
    "description": "buig(big + bug + ui) - 有着大大的 BUG 的 Vue3 UI组件库",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./components/*": {
            "import": "./dist/components/*.js",
            "types": "./dist/components/*.d.ts"
        },
        "./styles/*": "./dist/styles/*",
        "./tokens": {
            "import": "./dist/tokens.js",
            "types": "./dist/tokens.d.ts"
        }
    },
    "types": "./dist/index.d.ts",
    "sideEffects": [
        "**/*.css"
    ],
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "test": "vitest run",
        "test:watch": "vitest",
        "e2e": "playwright test",
        "docs:dev": "vitepress dev docs",
        "docs:dev:stable": "bun scripts/devDocsWrapper.ts",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "gen:variables": "bun scripts/genVariables.ts",
        "doc:append-vars": "bun scripts/appendVariablesSection.ts",
        "gen:tokens": "bun scripts/genTokens.ts",
        "gen:api": "bun scripts/genApi.ts",
        "check:contrast": "bun scripts/checkContrast.ts"
    },
    "keywords": [
        "bun",
        "ui",
        "framework",
        "javascript"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "dist/",
        "LICENSE",
        "package.json",
        "README.md"
    ],
    "simple-git-hooks": {
        "pre-commit": "bunx --bun lint-staged"
    },
    "lint-staged": {
        "*.{js,css,scss,less,ts,jsx,vue,html,json,md,yaml}": "bunx --bun prettier --write --cache --ignore-unknown"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/compiler-sfc": "^3.5.22",
        "lint-staged": "^16.2.1",
        "prettier": "^3.6.2",
        "simple-git-hooks": "^2.13.1",
        "typescript": "^5.4.0",
        "vite": "^7.1.7",
        "vitepress": "^2.0.0-alpha.12",
        "vue": "^3.5.22",
        "vue-tsc": "^3.0.8"
    }
}